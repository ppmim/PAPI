#!IRAFBIN/cl.e -f


set imextn = "oif:imh fxf:fits,fit,fts plf:pl qpf:qp stf:hhh,??h"
logver = "IRAF V2.11 May 1997"
language
images 
imutil

  hedit @files.nip ra      '(@"crval1")'  verif- show- add+ upd+
  hedit @files.nip dec     '(@"crval2")'  verif- show- add+ upd+
  hedit @files.nip scale   '(abs(3600*@"cdelt1"))'  verif- show- add+ upd+
  hedit @files.nip posang  '(-@"crota1")' verif- show- add+ upd+

logout

